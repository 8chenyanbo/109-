<body>
  <div class="card">
    <h2>114121 的成績記錄</h2>

    <div class="btn-group">
      <button onclick="exportCSV()">匯出 CSV</button>
      <button onclick="exportPDF()">匯出 PDF</button>
    </div>

    <table id="grades-table">
      <thead>
        <tr>
          <th>科目</th>
          <th>分數</th>
        </tr>
      </thead>
      <tbody>
        <tr><td>國文</td><td>85</td></tr>
        <tr><td>英文</td><td>78</td></tr>
        <tr><td>數學</td><td>92</td></tr>
        <tr><td>自然</td><td>88</td></tr>
        <tr><td>社會</td><td>81</td></tr>
      </tbody>
    </table>

    <p style="text-align:center; font-weight:500;">平均分：<span id="avg-score">--</span></p>

    <canvas id="chart" height="200"></canvas>
  </div>

  <script>
    // 計算平均分
    const rows = document.querySelectorAll("#grades-table tbody tr");
    let total = 0;
    rows.forEach(row => {
      const score = parseInt(row.cells[1].textContent);
      total += score;
    });
    const avg = Math.round(total / rows.length);
    document.getElementById("avg-score").textContent = avg;

    // 繪製長條圖
    const ctx = document.getElementById("chart").getContext("2d");
    const labels = Array.from(rows).map(row => row.cells[0].textContent);
    const scores = Array.from(rows).map(row => parseInt(row.cells[1].textContent));
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: '分數',
          data: scores,
          backgroundColor: ['#FCA5A5','#FDE68A','#FB7185','#FDBA74','#FCD34D']
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false }
        },
        scales: {
          y: { beginAtZero: true, max: 100 }
        }
      }
    });

    // 匯出功能（佔位）
    function exportCSV() {
      alert("匯出 CSV 功能尚未啟用");
    }
    function exportPDF() {
      alert("匯出 PDF 功能尚未啟用");
    }
  </script>
