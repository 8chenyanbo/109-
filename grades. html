<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>學生成績頁</title>
  <link rel="stylesheet" href="assets/style.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="card">
    <h2 id="title">學生成績</h2>

    <table id="grades-table">
      <thead>
        <tr>
          <th>科目</th>
          <th>分數</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <p style="text-align:center; font-weight:500;">平均分：<span id="avg-score">--</span></p>
    <canvas id="chart" height="200"></canvas>
  </div>

  <script>
    const seat = localStorage.getItem("seat");
    const grades = JSON.parse(localStorage.getItem("grades") || "{}");
    const scores = grades[seat];

    if (!scores) {
      document.getElementById("title").textContent = "找不到座號 " + seat + " 的成績";
    } else {
      const tbody = document.querySelector("#grades-table tbody");
      let total = 0, count = 0;

      Object.entries(scores).forEach(([subject, score]) => {
        const row = `<tr><td>${subject}</td><td>${score}</td></tr>`;
        tbody.insertAdjacentHTML("beforeend", row);
        total += score;
        count++;
      });

      const avg = Math.round(total / count);
      document.getElementById("avg-score").textContent = avg;

      // 畫圖
      const ctx = document.getElementById("chart").getContext("2d");
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: Object.keys(scores),
          datasets: [{
            label: '分數',
            data: Object.values(scores),
            backgroundColor: ['#FCA5A5','#FDE68A','#FB7185','#FDBA74','#FCD34D']
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true, max: 100 } }
        }
      });
    }
  </script>
</body>
</html>
